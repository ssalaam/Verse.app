<?xml version="1.0" encoding="utf-8"?>


    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="150dp"
    android:layout_width="match_parent"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
        android:id="@+id/cardView"
    android:layout_margin="10dp"
    android:layout_gravity="center_vertical"
    android:background="?backgroundColor">



    <ImageView
        android:orientation="horizontal"
        android:id="@+id/cover"
        android:transitionName="cover"
        android:layout_width="match_parent"
        android:adjustViewBounds="false"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:visibility="visible"
        android:layout_alignStart="@+id/text_holder"
        android:layout_height="match_parent"
        android:background="?backgroundColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title_holder"
            android:background="@drawable/gradient_bg90"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:paddingTop="30dp"
            android:elevation="3dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oture Ogbe "
                android:id="@+id/title"
                android:maxLines="2"
                android:lineSpacingExtra="2dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="10dp"
                android:visibility="visible"
                android:textColor="#ffffff"
                android:shadowColor="#7F000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:textSize="22sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9 lines"
                android:id="@+id/desc"
                android:maxLines="8"
                android:ellipsize="end"
                android:isScrollContainer="false"
                android:paddingRight="10dp"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"
                android:textColor="#d3ffffff"
                android:textAllCaps="true"
                android:layout_marginLeft="10dp"
                android:shadowColor="#7F000000"
                android:visibility="visible"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:layout_marginBottom="10dp"
                />


            <com.veed.oduchantingapp.CloudChip.ChipCloud
                xmlns:chipcloud="http://schemas.android.com/apk/res-auto"
                android:id="@+id/chip_cloud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                chipcloud:deselectedColor="@color/md_grey_300"
                chipcloud:deselectedFontColor="@color/md_grey_800"
                chipcloud:selectedColor="@color/md_grey_300"
                chipcloud:selectedFontColor="@color/md_grey_800"
                chipcloud:deselectTransitionMS="500"
                chipcloud:selectTransitionMS="750"
                android:layout_marginTop="5dp"
                android:paddingLeft="15dp"
                android:layout_marginBottom="5dp"
                android:visibility="gone"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:ico_color="@color/white"
            android:id="@+id/check"
            app:ico_icon="gmd-check"
            app:ico_size="24dp"
            android:elevation="3dp"
            android:visibility="gone"
            android:layout_margin="10dp"
            android:layout_gravity="top|left" />


        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:ico_color="@color/white"
            android:id="@+id/menu_icon"
            app:ico_icon="gmd-more-vert"
            app:ico_size="32dp"
            android:visibility="gone"
            android:elevation="3dp"
            android:layout_margin="15dp"
            android:layout_gravity="top|right" />

    </android.support.v7.widget.CardView>
